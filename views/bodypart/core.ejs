<h1> Core</h1>

<br><hr>

<form method="POST" action="/plan/index"> 

    <div class="form-group">
        <select name="exercise" id="">
            <option value="kettlebell">Kettlebell Swings</option>
            <option value="crunches">Crunches</option>
            <option value="situp">Sit-ups</option>
            <option value="plank">Plank</option>
        </select>
    </div>
<br>
    <div class="form-group">
        <label>Sets</label>
        <input type="number" name="sets" class="form-control">
    </div>

    <div class="form-group">
        <label> Repetitions </label>
        <input type="number" name="reps" class="form-control">
    </div>
    
    <div class="form-group">
        <label>Weights</label>
        <input type="number" name="weight" class="form-control">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
